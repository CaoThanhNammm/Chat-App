<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayoutMessage"
    android:layout_height="110dp"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/textViewMessageContentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/message_background_right"
            android:ellipsize="none"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewAvatarMessage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewMessageTimeMessage"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Thoi gian"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewNameMessage"
        android:layout_gravity="fill_vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:textColor="@color/gray_user_message" />
</FrameLayout>
